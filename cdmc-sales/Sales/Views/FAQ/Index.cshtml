@using Entity
@Html.Partial("contenttitle", "FAQ")
@(Html.Telerik().Grid<FAQ>().Name("FAQ")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Question).Width(300);
                    c.Bound(item => item.Code).Width(100);
                    c.Bound(item => item.ID).Title("操作").Template(@<span> <a href=@Url.Content("~/FAQ/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/FAQ/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/FAQ/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

                            )
<div class="anniu">
    <ul>
        <li>@Html.ActionLink("FAQ创建", "Create")</li>
    </ul>
</div>