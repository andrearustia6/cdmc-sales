@using Entity
@model List<Template>
@{ViewBag.Title = "模版列表";}     
@Html.Partial("contenttitle", "一般模版")
@(Html.Telerik().Grid<Template>(Model).Name("Template").ToolBar(commands => commands.Custom().Text("模版创建").Action("Create", "Template"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Content).Width(300);
                    c.Bound(item => item.TemplateType.Name).Width(100);
                    c.Bound(item => item.ID).Width(200).Title("操作").ClientTemplate("<a href='/Template/edit/" + "<#= ID #>'>编辑</a> | <a href='/Template/details/" + "<#= ID #>'>详细</a> | <a href='/Template/delete/" + "<#= ID #>'>删除</a>");
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)
