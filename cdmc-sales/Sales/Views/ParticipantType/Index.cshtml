@{ViewBag.Title = "参会类型列表";}
@using Entity
@model List<ParticipantType>
@Html.Partial("contenttitle", "参会类型")
@(Html.Telerik().Grid<ParticipantType>(Model).Name("ParticipantType").ToolBar(commands => commands.Custom().Text("参会类型创建").Action("Create", "ParticipantType"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.FullName).Width(300);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Title("操作").Width(200).Template(@<span> <a href=@Url.Content("~/ParticipantType/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/ParticipantType/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/ParticipantType/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

)
