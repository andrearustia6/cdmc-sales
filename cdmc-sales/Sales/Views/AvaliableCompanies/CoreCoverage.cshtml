@using Entity
@using Sales.Model
@model List<_CoreCoverage>

@(Html.Telerik().Grid<_CoreCoverage>(Model).Name("CoreCoverage")

        .Columns(columns =>
        {
            columns.Bound(p => p.CompanyName).Title("名称").Width(80).HtmlAttributes(new { style = "text-align:left" });
            columns.Bound(p => p.Manager).Title("负责人").Width(60).HtmlAttributes(new { style = "text-align:left" });
            columns.Bound(p => p.LeadCalledCount).Title("打过Lead数").Width(60).HtmlAttributes(new { style = "text-align:left" });
            columns.Bound(p => p.PickUpTime).Title("领用时间").Width(60).HtmlAttributes(new { style = "text-align:left" });
            columns.Bound(p => p.DispSales).Title("之前领用者").Width(60).HtmlAttributes(new { style = "text-align:left" });
        }).Scrollable(scrolling => scrolling.Height(600)).Sortable().Resizable(r => r.Columns(true))
                   )
