@using Entity
@using Utl
@Html.Partial("contenttitle", "未确认列表")
@(Html.Telerik().Grid<Model.AjaxTargetOfMonth>().Name("TargetOfMonth")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                    .DataBinding(dataBinding =>
                    {
                        dataBinding.Ajax()
                            .Select("_SelectIndex", "TargetOfMonth")
                            .Update("_SaveAjaxEditing", "TargetOfMonth");
                    })
                .Columns(c =>
                {
                    c.Bound(item => item.ProjectName);
                   // c.Bound(item => item.BaseDeal);
                    c.Bound(item => item.Deal);
                    c.Bound(item => item.CheckIn);
                    c.Bound(item => item.StartDate);
                    c.Bound(item => item.EndDate);
                    c.Bound(item => item.IsConfirm);
                    c.Command(commands =>
                    {
                        commands.Edit().ButtonType(GridButtonType.Image);

                    }).Title("确认");
                })
               .Editable(editing => editing.Mode(GridEditMode.PopUp))
             .Pageable(p => p.Style(GridPagerStyles.Status).PageSize(50)
               .PageOnScroll(true)).Scrollable(s => s.Height(350)).Sortable().Filterable().Groupable()
    )