@using Entity
@model List<PaymentType>
@(Html.Telerik().Grid<PaymentType>(Model).Name("PaymentType")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Title("操作").Width(200).Template(@<span> <a href=@Url.Content("~/PaymentType/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/PaymentType/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/PaymentType/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

                            )
@Html.ActionLink("创建", "Create")

