@{
    ViewBag.Title = "客户公司销售进度列表";
}

@using Entity
@model List<LeadCall>
@Html.Partial("contenttitle", "销售进度")           
@(Html.Telerik().Grid<LeadCall>(Model.OrderByDescending(o => o.CreatedDate).ToList()).Name("LeadCall").ToolBar(commands => commands.Custom().Text("创建销售进度").Action("AddLeadCall", "Sales"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Lead.Name).Width(150);
                    c.Bound(item => item.Creator).Title("创建人");
                    c.Bound(item => item.CreatedDate).Title("创建时间");
                    c.Bound(item => item.LeadCallType.Name);
                    c.Bound(item => item.CallBackDate);
              
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)
