@{
    ViewBag.Title = "出单";
}

@model Deal
@using Entity
@using Utl

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    var project = CH.GetDataById<Project>((int)ViewBag.ProjectID);
    ViewBag.AvaibleCRM = project.GetCRM();
    @Html.Hidden("ProjectID", (int)ViewBag.ProjectID);
    @Html.Partial(@"~\views\deal\change.cshtml", Model);
    @Html.Partial(@"editcommon", Model);
<div>
  <center>
        <p>
            <input type="submit"  onclick="checkpoll();" value=@SR.Save />
            
            @*<input type="button" onclick="this.form.submit();" value=@SR.Save />*@
        </p>
   </center>
</div>
}
<script>
    function checkpoll() {

        if ($("#Polldiv").is(":visible")) {
            if ($("#Poll").val() <= 0) {
                alert('请输入票数。')
                return false;
            }
            
        }
    }
</script>
