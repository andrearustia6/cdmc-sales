@using Entity
@using Utl
@model List<Company>
@{ViewBag.Title = "重复公司列表";}
@Html.Partial("contenttitle", "重复公司列表")
@(Html.Telerik().Grid(Model).Name("Company").ToolBar(commands => commands.Custom().Text("返回").Action("ImportCompany", "Project"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(150);
                    c.Bound(item => item.Area.Name).Title("行业").Width(100);
                    c.Bound(item => item.Available).Width(80);
                    c.Bound(item => item.Contact).Width(100);
                    c.Bound(item => item.CompanyType.Name).Width(100);
                    c.Bound(item => item.Cerator).Width(70);
                    c.Bound(item => item.From).Width(70);
                    @*c.Bound(item => item.ID).Title("操作").Width(150).Template(@<span><a href=@Url.Content("~/Company/Details/" + item.ID)>详细</a>
                    </span>);*@
                })

                .Resizable(resizing => resizing.Columns(true))
                .Groupable()
                .Sortable()
                .Filterable()
                .Scrollable(scrolling => scrolling.Height(350))
                        )
