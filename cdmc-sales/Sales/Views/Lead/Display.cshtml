@using Utl;
@model Entity.Lead
<fieldset>
    <legend>@SR.Form</legend>
    <div class="display-label">客户照片</div>
    <div class="display-field">
      <img alt="上传文件" width="300" height="200" src=@Url.Action("ShowImage", "Image", new { id = Model.ImageID }) />
    </div>

   <div class="display-label">客户职位</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">客户姓名</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FullName)
    </div>

    <div class="display-label">联系方式</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Contact)
    </div>

    <div class="display-label"></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Fax)
    </div>

    <div class="display-label"></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EMail)
    </div>

    <div class="display-label"></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Mobile)
    </div>

    <div class="display-label">所属公司</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Company.FullName)
    </div>
</fieldset>
@Html.Partial("displaycommon", Model)

