@{
    ViewBag.Title = "更新个人信息";
}
@model Entity.UserInfoModel
@using Utl
@using (Html.BeginForm())
{
    <fieldset>
        <legend>账号信息</legend>
        <div class="editor-label">
            @Html.LabelFor(m => m.UserName)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(m => m.UserName)
            @Html.HiddenFor(m => m.UserName)
        </div>
         <div class="editor-label">
            @Html.LabelFor(m => m.RoleID)
        </div>
        <div class="editor-field">
            @if (Model.RoleID==0 )
            {
        <p>未配置</p> 
            }
            else
            {
              var l = Employee.GetRoleName(Model.UserName);
             <P>@l</p>
            }
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Email)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.DisplayName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.DisplayName)
            @Html.ValidationMessageFor(m => m.DisplayName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Contact,"电话座机的extension号,例如：9999")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Contact)
            @Html.ValidationMessageFor(m => m.Contact)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Mobile)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Mobile)
            @Html.ValidationMessageFor(m => m.Mobile)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.BirthDay)
        </div>
        <div class="editor-field">
            @Html.Telerik().DatePickerFor(m => m.BirthDay)
            @Html.ValidationMessageFor(m => m.BirthDay)
        </div>
       
        <div class="editor-label">
            @Html.LabelFor(m => m.Gender)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Gender, new SelectList(new List<string>() { "男", "女" }), "-请选择-")
            @Html.ValidationMessageFor(m => m.Gender)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Department)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Department, new SelectList(new List<string>() { "销售部", "会务部","市场部","产品部" }), "-请选择-")
            @Html.ValidationMessageFor(m => m.Department)
        </div>
        <div class="editor-label">
           @Html.ActionLink("更新密码","ChangePassword","Account")
        </div>
        
    </fieldset>
    
      <div>
        <center>
            <input type="submit" value=@SR.Save />
            @Html.ActionLink(SR.GobackToList, "Index")
        </center>
    </div>
}