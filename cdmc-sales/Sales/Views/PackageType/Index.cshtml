@using Entity
@model List<PackageType>
@{ViewBag.Title = "Package类型";}
@Html.Partial("contenttitle", "Package")
@(Html.Telerik().Grid<PackageType>(Model).Name("PackageType").ToolBar(commands => commands.Custom().Text("Package类型创建").Action("Create", "PackageType"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(300);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Title("操作").Width(200).Template(@<span> <a href=@Url.Content("~/PackageType/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/PackageType/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/PackageType/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

)


