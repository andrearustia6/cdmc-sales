@{ViewBag.Title = "Package列表";}
@using Entity
@model List<Package>
@Html.Partial("contenttitle", "Package")
@(Html.Telerik().Grid<Package>(Model).Name("Package").ToolBar(commands => commands.Custom().Text("Package创建").Action("Create", "Package"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.FullName).Title("Package名称").Width(200);
                    c.Bound(item => item.PackageType.FullName).Title("Package类型").Width(120);
                    c.Bound(item => item.ParticipantType.FullName).Title("参会类型").Width(120);
                    c.Bound(item => item.SubName);
                    c.Bound(item => item.Prize).Format("{0:c}").Width(100);
                    c.Bound(item => item.ID).Title("操作").Width(170).Template(@<span> <a href=@Url.Content("~/Package/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/Package/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/PackageItem/Create/?from=Package&PackageId=" + item.ID)>添加子项</a> | <a href=@Url.Content("~/Package/delete/" + item.ID) >
                            删除</a> </span>);
                })
                .DetailView(e => e.Template(@<text> @RenderGrid(item.PackageItems, item.ID) </text>))
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))
                )


@helper RenderGrid(List<PackageItem> PackageItems, int packageid)
    { 
     @(Html.Telerik().Grid(PackageItems).Name("PackageItems" + packageid)
                            .Columns(c =>
                            {
                                c.Bound(o => o.FullName).Width(300);
                                c.Bound(o => o.Content).Title("内容");
                                c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/PackageItem/Edit/?from=Package&id=" + item.ID) >编辑</a> | <a href=@Url.Content("~/PackageItem/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/PackageItem/delete/" + item.ID) >删除</a> 
                   </span>);
                            })
                                               .Resizable(resizing => resizing.Columns(true))
                                               .Pageable(p => p.PageSize(20))
                                               .Sortable())
} 