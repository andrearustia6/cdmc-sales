@using Entity
@model List<Package>
@(Html.Telerik().Grid<Package>(Model).Name("Package")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.FullName).Width(300);
                    c.Bound(item => item.PackageType.FullName).Width(200);
                    c.Bound(item => item.ParticipantType.FullName).Width(200);
                    c.Bound(item => item.ID).Title("操作").Width(150).Template(@<span> <a href=@Url.Content("~/PackageItem/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/PackageItem/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/PackageItem/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

                            )
@Html.ActionLink("创建", "Create")
