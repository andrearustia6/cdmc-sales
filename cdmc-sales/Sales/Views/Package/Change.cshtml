@model Package
@using Utl
@using Entity
@{
    ViewBag.Title = "Package";
}

<fieldset>
    <legend>@SR.Form</legend>
    <div class="editor-label">
            @Html.LabelFor(model => model.Name_EN)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name_EN)
            @Html.ValidationMessageFor(model => model.Name_EN)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name_CH)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name_CH)
            @Html.ValidationMessageFor(model => model.Name_CH)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubName)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.SubName)
            @Html.ValidationMessageFor(model => model.SubName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prize)
        </div>
        <div class="editor-field">
            @Html.Telerik().CurrencyTextBoxFor(model => model.Prize).CurrencySymbol("$");
            @Html.ValidationMessageFor(model => model.Prize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PackageTypeID)
        </div>
        <div class="editor-field">
            @Html.DropDownList("PackageTypeID", new SelectList(CH.GetAllData<PackageType>(), "ID", "Name"), "-请选择-")
            @Html.ValidationMessageFor(model => model.PackageTypeID)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.ParticipantTypeID)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ParticipantTypeID", new SelectList(CH.GetAllData<ParticipantType>(), "ID", "Name"), "-请选择-")
            @Html.ValidationMessageFor(model => model.ParticipantTypeID)
        </div>
</fieldset>

