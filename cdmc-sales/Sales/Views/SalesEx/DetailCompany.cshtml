@using Entity
@using Utl
@model Model.AjaxViewSaleCompany
<fieldset>
    <legend>公司信息</legend>
    <ul>
        <li><span class="addcompany-left">@Html.LabelFor(model => model.Name_CN) @Html.TextBoxFor(model => model.Name_CN, new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Name_CN)</span> <span class="addcompany-right">
                @Html.LabelFor(model => model.Name_EN) @Html.TextBoxFor(model => model.Name_EN, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.Name_EN)
            </span></li>
        <li><span class="addcompany-left">@Html.LabelFor(model => model.TypeId) @Html.DropDownListFor(model => model.TypeId, SelectHelper.CompanyTypeSelectList(null), "请选择", new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.TypeId)</span> <span class="addcompany-right">
                @Html.LabelFor(model => model.Phone) @Html.TextBoxFor(model => model.Phone, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.Phone)
            </span></li>
        <li><span class="addcompany-left">@Html.LabelFor(model => model.ZipCode) @Html.TextBoxFor(model => model.ZipCode, new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.ZipCode) </span><span class="addcompany-right">
                @Html.LabelFor(model => model.Fax) @Html.TextBoxFor(model => model.Fax, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.Fax)
            </span></li>
        <li><span class="addcompany-left">@Html.LabelFor(model => model.Address) @Html.TextBoxFor(model => model.Address, new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Address)</span> <span class="addcompany-right">
                @Html.LabelFor(model => model.WebSite) @Html.TextBoxFor(model => model.WebSite, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.WebSite)
            </span></li>
        <li><span class="addcompany-left">@Html.LabelFor(model => model.ProgressId) @Html.DropDownListFor(model => model.ProgressId, SelectHelper.ProgressSelectList(null), "请选择", new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.ProgressId)</span> <span class="addcompany-right">
                @Html.LabelFor(model => model.DistrictNumberId) @Html.DropDownListFor(model => model.DistrictNumberId, SelectHelper.DistinctNumberSelectList(null), "请选择", new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.DistrictNumberId)
            </span></li>
        <li><span class="addcompany-left">@Html.LabelFor(model => model.IndustryId) @Html.DropDownListFor(model => model.IndustryId, SelectHelper.CompanyIndustrySelectList(null), "请选择", new { style = "width:200px", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.IndustryId)</span> </li>
        <li><span>@Html.LabelFor(model => model.Business) @Html.TextAreaFor(model => model.Business, new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Business)</span> </li>
        <li><span>@Html.LabelFor(model => model.Desc) @Html.TextAreaFor(model => model.Desc, new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Desc)</span> </li>
        <li>
            <fieldset>
                <legend>Categories</legend>
                @foreach (Category category in CH.GetAllData<Category>(c => c.ProjectID == Model.ProjectId))
                { 
                    <label class="company-category">@category.Name</label>
                    if (Model.Categories.Contains(category.ID))
                    {
                    <input  name="Categories" type="checkbox" value="@category.ID" checked="checked" disabled="disabled" />
                    }
                    else
                    { 
                    <input  name="Categories" type="checkbox" value="@category.ID" disabled="disabled" />
                    }
                }
            </fieldset>
        </li>
    </ul>
</fieldset>
<style>
    select
    {
        width: 150px;
    }
</style>
