@model Entity.Message

<fieldset>
    <legend>Message</legend>

    <div class="display-label">问题标题</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Question)
    </div>

        <div class="display-label">问题内容</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
    </div>

    <div class="display-label"></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FlowNumber)
    </div>

    <div class="display-label">提问人</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Member)
    </div>

    <div class="display-label">项目名称</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Project.Name)
    </div>

    <div class="display-label">解答人</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Solver)
    </div>


    <div class="display-label">提问类型</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SalesType.Name)
    </div>

    <div class="display-label">Answer</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Answer)
    </div>
</fieldset>
