@model Entity.Company
@using Utl
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true)
<fieldset>
    <legend>@SR.Form</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Contact)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Contact)
        @Html.ValidationMessageFor(model => model.Contact)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.CompanyType.Name)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.CompanyTypeID, new SelectList(CH.GetAllData<Entity.CompanyType>(),"ID","Name"),"-请选择-")
        @Html.ValidationMessageFor(model => model.CompanyTypeID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Address)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Area.Name)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.AreaID, new SelectList(CH.GetAllData<Entity.Area>(),"ID","Name"),"-请选择-")
        @Html.ValidationMessageFor(model => model.AreaID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.ForeignAssetPercentage)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ForeignAssetPercentage)
        @Html.ValidationMessageFor(model => model.ForeignAssetPercentage)
    </div>
</fieldset>
@Html.Partial("editcommon", Model)
<center>
    <p>
        <input type="submit" value=@SR.Save />
        @Html.ActionLink(SR.GobackToList, "Index")
    </p>
</center>
