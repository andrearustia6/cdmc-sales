@model Entity.Company
@using Utl
<fieldset>
    <legend>@SR.Form</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.ComapanyTitle)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ComapanyTitle)
        @Html.ValidationMessageFor(model => model.ComapanyTitle)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Contact)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Contact)
        @Html.ValidationMessageFor(model => model.Contact)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.CompanyType.CompanyTypeName)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.CompanyTypeID, new SelectList(CH.GetAllData<Entity.CompanyType>(),"ID","CompanyTypeName"),"-请选择-")
        @Html.ValidationMessageFor(model => model.CompanyTypeID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Address)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.ForeignAssetPercentage)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ForeignAssetPercentage)
        @Html.ValidationMessageFor(model => model.ForeignAssetPercentage)
    </div>
</fieldset>
@Html.Partial("editcommon", Model)
<center>
    <p>
        <input type="submit" value=@SR.Save />
        @Html.ActionLink(SR.GobackToList, "Index")
    </p>
</center>
