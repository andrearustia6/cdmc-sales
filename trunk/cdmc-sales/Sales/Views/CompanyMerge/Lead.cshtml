@using Entity
@using Utl
@model List<Lead>
@(Html.Telerik().Grid<Lead>(Model).Name("Lead")
              
                .Columns(c =>
                {
                    c.Bound(o => o.Name_EN);
                    c.Bound(o => o.Name_CH);
                    c.Bound(o => o.Title).Width(120);
                    c.Bound(o => o.Contact).Width(150);
                    c.Bound(o => o.Mobile).Width(150);
                    c.Bound(o => o.EMail).Width(120);
                    c.Bound(o => o.Contact).Width(200);
                })
                .Resizable(resizing => resizing.Columns(true))
)

