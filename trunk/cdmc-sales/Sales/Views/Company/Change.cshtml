@model Entity.Company
@using Utl

@Html.ValidationSummary(true)
<fieldset>
    <legend>@SR.Form</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.Name_EN)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name_EN)
        @Html.ValidationMessageFor(model=>model.Name_EN)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.DistrictNumber)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DistrictNumber)
        @Html.ValidationMessageFor(model => model.DistrictNumber)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Contact)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Contact)
        @Html.ValidationMessageFor(model => model.Contact)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.KeyWords)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.KeyWords)
        @Html.ValidationMessageFor(model => model.KeyWords)
    </div>
    
    <div class="editor-field">
        @Html.HiddenFor(model => model.Cerator)
    </div>
      <div class="editor-field">
        @Html.HiddenFor(model => model.From)
    </div>
       <div class="editor-label">
        @Html.Label("公司架构")
    </div>
    <div class="editor-field">
        @{if (Model != null)
          {
            <img  alt="上传文件" width="300" height="200" src=@Url.Action("ShowImage", "Image", new { id = Model.ImageID }) />
          }
        }
        @Html.Telerik().Upload().Async(a=>a.AutoUpload(true)).Name("attachments").Multiple(false)
  

    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.CompanyType.Name)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.CompanyTypeID, new SelectList(CH.GetAllData<Entity.CompanyType>(),"ID","Name"),"-请选择-")
        @Html.ValidationMessageFor(model => model.CompanyTypeID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Address)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Category.Name_EN)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.CategoryID, new SelectList(CH.GetAllData<Entity.Category>(), "ID", "Name_CH"), "-请选择-")
        @Html.ValidationMessageFor(model => model.CategoryID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.ForeignAssetPercentage)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ForeignAssetPercentage)
        @Html.ValidationMessageFor(model => model.ForeignAssetPercentage)
    </div>
</fieldset>


