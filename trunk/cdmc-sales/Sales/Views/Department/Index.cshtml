@using Entity
@model List<Department>
@Html.Partial("contenttitle", "部门类型")           
@(Html.Telerik().Grid<Department>(Model).Name("Department").ToolBar(commands => commands.Custom().Text("部门类型创建").Action("Create", "Department"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.IsActivated).Width(200);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/Department/Edit/" + item.ID) >编辑</a> | <a href=@Url.Content("~/Department/Details/" + item.ID)>详细</a>  | <a href=@Url.Content("~/Department/delete/" + item.ID) >删除</a> 
                   </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)