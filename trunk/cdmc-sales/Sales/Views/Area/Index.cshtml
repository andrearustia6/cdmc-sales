@using Entity
@model List<Area>
@Html.Partial("contenttitle", "行业类型")           
@(Html.Telerik().Grid<Area>(Model).Name("Area").ToolBar(commands => commands.Custom().Text("行业类型创建").Action("Create", "Area"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.FullName).Width(200);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/Area/Edit/" + item.ID) >编辑</a> | <a href=@Url.Content("~/Area/Details/" + item.ID)>详细</a>  | <a href=@Url.Content("~/Area/delete/" + item.ID) >删除</a> 
                   </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)
