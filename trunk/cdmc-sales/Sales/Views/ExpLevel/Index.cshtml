@using Entity
@model List<ExpLevel>
@Html.Partial("contenttitle", "职级类型")           
@(Html.Telerik().Grid<ExpLevel>(Model).Name("ExpLevel").ToolBar(commands => commands.Custom().Text("职级类型创建").Action("Create", "ExpLevel"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Department.ID).Width(200);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/ExpLevel/Edit/" + item.ID) >编辑</a> | <a href=@Url.Content("~/ExpLevel/Details/" + item.ID)>详细</a>  | <a href=@Url.Content("~/ExpLevel/delete/" + item.ID) >删除</a> 
                   </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)