@helper LeadsInfo()
    {     
    <dl>
        @foreach (var lead in Model.AjaxLeads)
        {
            <input style="margin:10px; padding:5px;" type="button" onclick="onLeadEdit(@(lead.LeadID))" value="更新Lead" />
            <fieldset id="@(lead.LeadID)">
                <dt style="font-size: 13px; margin: 5px;">@lead.DisplayText</dt>
                <dd class="fieldname">
                    <div>
                        <font>中文名：</font><span class="leadNameCN">@lead.LeadNameCH</span>
                    </div>
                    <div>
                        <font>英文名：</font><span class="leadNamEN">@lead.LeadNameEN</span>
                    </div>
                    <div>
                        <font>Lead职位：</font><span class="leadTitle"> @lead.LeadTitle</span>
                    </div>
                    <div>
                        <font>Lead性别：</font><span class="leadGender"> @lead.Gender</span>
                    </div>
                    <div>
                        <font>客户区号：</font><span class="LeadDistinctNumberString"> @lead.LeadDistinctNumberString</span>
                    </div>
                </dd>
                <dt style="font-size: 13px;">联系方式</dt>
                <dd class="fieldname">
                    <div>
                        <font>公司邮箱：</font><span class="LeadEmail">@lead.LeadEmail</span>
                    </div>
                    <div>
                        <font>个人邮箱：</font><span class="LeadPersonalEmail">@lead.LeadPersonalEmail </span>
                    </div>
                    <div>
                        <font>直线：</font><span class="LeadContact">@lead.LeadContact</span>
                    </div>
                    <div>
                        <font>手机：</font><span class="LeadMobile">@lead.LeadMobile</span>
                    </div>
                    <div>
                        <font>传真：</font><span class="LeadFax">@lead.LeadFax</span>
                    </div>
                    <div>
                        <font>微博账号：</font><span class="WeiBo">@lead.WeiBo</span>
                    </div>
                    <div>
                        <font>微信账号：</font><span class="WeiXin">@lead.WeiXin</span>
                    </div>
                    <div>
                        <font>LinkIn账号：</font><span class="LinkIn">@lead.LinkIn</span>
                    </div>
                    <div>
                        <font>FaceBook账号：</font><span class="FaceBook">@lead.FaceBook</span>
                    </div>
                    <div>
                        <font>传真：</font><span class="LeadFax">@lead.LeadFax</span>
                    </div>
                    <div>
                        <font>博客地址：</font><span class="Blog">@lead.Blog</span>
                    </div>
                </dd>
                <dt style="font-size: 13px;">描述</dt>
                <dd class="fieldname">
                    <div>
                        <font></font>
                    </div>
                </dd>
                <dt style="font-size: 13px;">致电列表</dt>
                <dd>
                    @(Html.Telerik().Grid<AjaxCall>(lead.AjaxCalls.OrderByDescending(o => o.CallDate)).Name("lead" + lead.LeadID)
                    .Columns(columns =>
                    {
                        columns.Bound(o => o.CallType).Template(@<text><span id="@(item.LeadCallID)_CallType">@item.CallType</span></text>).Width(80);
                        columns.Bound(o => o.CallBackDate).Template(@<text><span id="@(item.LeadCallID)_CallBackDate">@item.CallBackDate</span></text>).Width(100);
                        columns.Bound(o => o.CallDate).Template(@<text><span id="@(item.LeadCallID)_CallDate">@item.CallDate</span></text>).Width(100);
                        columns.Bound(o => o.Caller).Template(@<text><span id="@(item.LeadCallID)_Caller">@item.Caller</span></text>).Width(80);
                        columns.Bound(o => o.Result).Template(@<text><span id="@(item.LeadCallID)_Result">@item.Result</span></text>);
                        columns.Bound(o => o.LeadCallID).Template(@<text><input onclick='EditLeadCall(@item.LeadCallID)' type='button' value='update' style='padding:5px 10px' /></text>);
                    }).Pageable(paging => paging.Enabled(false)).Resizable(resizing => resizing.Columns(true)).Sortable().Scrollable(scrolling => scrolling.Enabled(false))
                       .Filterable())
                </dd>
            </fieldset>
        }
    </dl>
}
