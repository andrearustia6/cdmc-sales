@using Entity
@model List<CompanyRelationship>
@Html.Partial("contenttitle", "行业类型")           
@(Html.Telerik().Grid<CompanyRelationship>(Model).Name("CompanyRelationship")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Company.Name );
                    c.Bound(item => item.Importancy);
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/CompanyRelationship/Edit/" + item.ID) >编辑</a> | <a href=@Url.Content("~/CompanyRelationship/Details/" + item.ID)>详细</a>  | <a href=@Url.Content("~/CompanyRelationship/delete/" + item.ID) >删除</a> 
                   </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)