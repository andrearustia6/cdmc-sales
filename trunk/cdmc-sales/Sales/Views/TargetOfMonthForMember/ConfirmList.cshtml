@using Entity
@Html.Partial("contenttitle", "月目标确认")
@(Html.Telerik().Grid<Model.AjaxTargetOfMonthForMember>().Name("Grid")
.DataKeys(keys => { keys.Add(p => p.ID); })
.DataBinding(dataBinding =>
{
    dataBinding.Ajax()
        .Select("_SelectIndex", "TargetOfMonthForMember")
        .Update("_SaveAjaxEditing", "TargetOfMonthForMember");
})
.Columns(c =>
{
    c.Bound(item => item.BaseDeal);
    c.Bound(item => item.Deal);
    c.Bound(item => item.CheckIn);
    c.Bound(item => item.StartDate);
    c.Bound(item => item.EndDate);
    c.Bound(item => item.MemberName);
    c.Bound(item => item.SalesBriefName);
    c.Bound(item => item.IsConfirm);

    c.Command(commands =>
    {
        commands.Edit().ButtonType(GridButtonType.Image);

    }).Width(100).Title("确定");
})
   .Editable(editing => editing.Mode(GridEditMode.PopUp))
        .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350)).Filterable()
            .Sortable()

   //.Pageable(p => p.Style(GridPagerStyles.Status)
        //    .PageOnScroll(true)).Scrollable().Sortable().Filterable().Groupable()
)
