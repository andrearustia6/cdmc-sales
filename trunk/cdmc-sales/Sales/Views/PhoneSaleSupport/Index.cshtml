@using Entity
@model List<PhoneSaleSupport>
@Html.Partial("contenttitle", "话术模版")
@(Html.Telerik().Grid<PhoneSaleSupport>(Model).Name("PhoneSaleSupport").ToolBar(commands => commands.Custom().Text("电话销售支持创建").Action("Create", "PhoneSaleSupport"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.OnPhoneBlockType.Name).Width(200);
                    c.Bound(item => item.Block).Width(200);
                    c.Bound(item => item.ID).Title("操作").Width(200).Template(@<span> <a href=@Url.Content("~/PhoneSaleSupport/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/PhoneSaleSupport/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/PhoneSaleSupport/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

)

