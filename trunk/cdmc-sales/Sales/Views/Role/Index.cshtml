@using Entity
@model List<Role>
@Html.Partial("contenttitle", "角色类型")
@(Html.Telerik().Grid<Role>(Model).Name("Role").ToolBar(commands => commands.Custom().Text("角色类型创建").Action("Create", "Role"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Description);
                    c.Bound(item => item.ID).Title("操作").Width(200).Template(@<span> <a href=@Url.Content("~/Role/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/Role/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/Role/delete/" + item.ID) >
                            删除</a> </span>);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Filterable().Sortable().Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Scrollable(scrolling => scrolling.Height(350))

)


