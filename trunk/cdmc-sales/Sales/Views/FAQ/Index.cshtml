@using Entity

@(Html.Telerik().Grid<FAQ>().ClientEvents(e => e.OnError("bindingError")).Name("FAQ").DataBinding(databinding => databinding.Ajax().Select("AjaxFAQIndex", "FAQ"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Question).Width(300);
                    c.Bound(item => item.Code).Width(100);
                    c.Bound(item => item.ID).Width(200).Title("操作").ClientTemplate("<a href='/FAQ/edit/" + "<#= ID #>'>编辑</a> | <a href='/FAQ/details/" + "<#= ID #>'>详细</a> | <a href='/FAQ/delete/" + "<#= ID #>'>删除</a>"); 
                 })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))
              
)
@Html.ActionLink("创建", "Create")