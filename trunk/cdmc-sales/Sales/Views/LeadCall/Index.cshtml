@{ViewBag.Title="销售进度记录列表";}
@using Entity
@model List<LeadCall>
@Html.Partial("contenttitle", "销售进度")           
@(Html.Telerik().Grid<LeadCall>(Model).Name("LeadCall")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Lead.Name).Width(100);
                    c.Bound(item => item.Lead.Title).Width(100);
                    c.Bound(item => item.LeadCallType.Name).Width(100);
                    c.Bound(item => item.CompanyRelationship.Company.Name).Title("公司名称").Width(100);
                    c.Bound(item => item.CreatedDate).Title("创建时间").Width(200);
                    c.Bound(item => item.Creator).Title("创建人").Width(100);
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/LeadCall/Edit/" + item.ID) >编辑</a> | <a href=@Url.Content("~/LeadCall/Details/" + item.ID)>详细</a>  | <a href=@Url.Content("~/LeadCall/delete/" + item.ID) >删除</a> 
                   </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)