@using Entity
@model List<TemplateType>
@Html.Partial("contenttitle", "模版列表")
@(Html.Telerik().Grid<TemplateType>(Model).Name("TemplateType").ToolBar(commands => commands.Custom().Text("模板类型创建").Action("Create", "TemplateType"))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name);
                    c.Bound(item => item.ID).Title("操作").Width(200).Template(@<span> <a href=@Url.Content("~/TemplateType/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/TemplateType/Details/" + item.ID)>详细</a> | <a href=@Url.Content("~/TemplateType/delete/" + item.ID) >
                            删除</a> </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)
