@using Entity
@using Utl
@(Html.Telerik().Grid<Client>(CH.GetAllData<Client>()).Name("Client")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Title).Width(200);
                    c.Bound(item => item.Contact).Width(150);
                    c.Bound(item => item.ID).Title("操作").ClientTemplate("<a href='/Client/edit/" + "<#= ID #>'>编辑</a> | <a href='/Client/details/" + "<#= ID #>'>详细</a>  | <a href='/Client/delete/" + "<#= ID #>'>删除</a>"); 
                 })
                    .Resizable(resizing => resizing.Columns(true))
                    .Groupable()
                    .Pageable(p => p.PageSize(20))
                    .Sortable()
                    .Filterable()
                    .Scrollable(scrolling => scrolling.Height(350))
)
@Html.ActionLink("客户创建", "Create")