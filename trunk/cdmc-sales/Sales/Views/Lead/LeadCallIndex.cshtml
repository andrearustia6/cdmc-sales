@using Entity
@model List<LeadCall>
@Html.Partial("contenttitle", "通话列表")
@(Html.Telerik().Grid<LeadCall>(Model).Name("LeadCall")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.FaxOut).Width(150);
                    c.Bound(item => item.IsFirstPitch).Width(100);
                    c.Bound(item => item.FaxOut).Width(100);
                    c.Bound(item => item.LeadCallType.Name).Width(200);
                    c.Bound(item => item.CallBackDate).Width(200);
                    c.Bound(item => item.ModifiedTime).Width(200);
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span>
                    <a href=@Url.Content("~/LeadCall/Edit/" + item.ID) >编辑</a> | <a href=@Url.Content("~/LeadCall/Details/" + item.ID)>详细</a>  | <a href=@Url.Content("~/LeadCall/delete/" + item.ID) >删除</a> 
                   </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)
