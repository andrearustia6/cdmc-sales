@using Entity
@using Utl
@model List<Lead>
@(Html.Telerik().Grid<Lead>(Model).Name("Lead")
     .ToolBar(commands => commands.Custom().HtmlAttributes(new { id = "export" }).Text("Export to CSV").Action("EmailExportCsv", "Lead", new { page = 1, orderBy = "~", filter = "~" }))
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.EMail);
                })
                                            .Resizable(resizing => resizing.Columns(true))
                                            .Groupable()
                                            .Pageable(p => p.PageSize(20))
                                            .Sortable()
                                            .Filterable()
                                            .Scrollable(scrolling => scrolling.Height(350))
                        )

