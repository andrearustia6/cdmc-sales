@using Utl;
@model Entity.Research
<fieldset>
    <legend>@SR.Form</legend>
   

   <div class="display-label">公司名称</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">调研内容</div>
    <div class="display-field">
    
    @HtmlExtensions.GetHtmlString(@Model.Contents)
    </div>

    <div class="display-label">公司架构</div>
    <div class="display-field">
    @if (Model != null)
    {
        <div style="max-width:300px; max-height:250px;">
      <img alt="公司架构图"  src=@Url.Content("~/Image/DisplayImage/" +  Model.ImageID) />
      </div>
    }
    </div>
</fieldset>


