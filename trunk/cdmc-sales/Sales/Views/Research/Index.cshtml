@using Entity
@using Utl;
@{ViewBag.Title = "调研列表";}
@model List<Research>
@Html.Partial("contenttitle", "调研列表")
@(Html.Telerik().Grid<Research>(Model).Name("Research")
                .DataKeys(keys =>
                {
                    keys.Add(s => s.ID);
                })
                .Columns(c =>
                {
                    c.Bound(item => item.Name).Width(200);
                    c.Bound(item => item.Contents).Template(@<span>@Utl.ShortText(item.Contents, 100)</span>);
                    c.Bound(item => item.Creator);
                    c.Bound(item => item.CreatedDate).Format("{0:d}");
                    c.Bound(item => item.ID).Width(200).Title("操作").Template(@<span> <a href=@Url.Content("~/Research/Edit/" + item.ID) >
                        编辑</a> | <a href=@Url.Content("~/Research/Details/" + item.ID)>详细</a> </span>);
                })
                .Resizable(resizing => resizing.Columns(true))
                .Filterable().Sortable().Groupable()
                .Pageable(p => p.PageSize(20))
                .Scrollable(scrolling => scrolling.Height(350))

)
