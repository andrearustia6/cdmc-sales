@using Entity

@Html.Partial("contenttitle", "打分")           
@(Html.Telerik().Grid<AssignPerformanceScore>().Name("Grid")
.DataKeys(keys => { keys.Add(p => p.ID); })
.ToolBar(commands => commands.Insert().ImageHtmlAttributes(new { style = "margin-left:0" }))
.DataBinding(dataBinding => { dataBinding.Ajax()
    .Select("_SelectIndex", "AssignPerformanceScore")
    .Insert("_InsertAjaxEditing", "AssignPerformanceScore")
    .Update("_SaveAjaxEditing", "AssignPerformanceScore")
    .Delete("_DeleteAjaxEditing", "AssignPerformanceScore");
})
.Columns(columns => {
    columns.Bound(p => p.TargetName);
columns.Bound(p => p.Score);
    columns.Bound(p => p.Month);
    columns.Bound(p => p.Year);
     columns.Bound(p => p.Assigner); 
   columns.Command(commands => { commands.Edit(); commands.Delete(); }).Width(220).Title("操作"); })
   .Editable(editing => editing.Mode( GridEditMode.PopUp))
   .Pageable(p=>p.Style(GridPagerStyles.Status)
       .PageOnScroll(true)).Scrollable().Sortable().Filterable().Groupable()
)
