@using Entity
@using Utl
@using BLL
@using (Html.BeginForm())
{
<div  style="margin:10px; margin-left:0px;">
        <span ><b>目标项目：</b>
        @{
    var accessright = ViewBag.Right as string;
    List<Project> ps;
    
    if (!string.IsNullOrEmpty(accessright))
    {
        ps = CRM_Logical.GetUserProjectRight(accessright);
    }
    else
    {
        ps = CRM_Logical.GetUserInvolveProject();
    }  
            var selected = ps.Count== 0 ? 0:ps.FirstOrDefault().ID;
        @Html.DropDownList("ProjectID", new SelectList(ps, "ID", "ProjectCode", selected), "-请选择-", new { onchange = "this.form.submit();" })
}
            </span>
       </div>
}